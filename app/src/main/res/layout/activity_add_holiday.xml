<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/WhiteLime"
    tools:context=".AddHolidayActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="36dp"
        app:cardCornerRadius="36dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/white">

            <TextView
                android:id="@+id/addHolidayText"
                android:layout_width="278dp"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:text="Add your holiday!"
                android:textAlignment="center"
                android:textColor="@color/Lime"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/dateEditText"
                android:layout_width="278dp"
                android:layout_height="52dp"
                android:layout_marginTop="20dp"
                android:drawablePadding="8dp"
                android:hint="Date"
                android:inputType="date"
                android:drawableLeft="@drawable/baseline_calendar_month_24"/>

            <EditText
                android:id="@+id/holidayNameEditText"
                android:layout_width="278dp"
                android:layout_height="52dp"
                android:layout_marginTop="20dp"
                android:drawablePadding="8dp"
                android:hint="Holiday name"
                android:drawableLeft="@drawable/baseline_celebration_24"
                />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:text="Add" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>