<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/holidayNameTextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/buttonsquared"
        android:text="Holiday Name"
        android:textAlignment="center"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/editHoly"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/holidayNameTextView"
        android:drawableEnd="@drawable/edit"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/holidayNameTextView"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/MainWindow"
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:layout_below="@id/holidayNameTextView"
        android:background="@drawable/border"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/holidayNameTextView" />


</androidx.constraintlayout.widget.ConstraintLayout>