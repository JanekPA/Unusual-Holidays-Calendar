<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/WhiteLime"
    tools:context=".EditHolidayActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="36dp"
        app:cardCornerRadius="36dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp">

            <TextView
                android:id="@+id/editHolidayText"
                android:layout_width="278dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Edit your holiday!"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editDateEditText"
                android:layout_width="278dp"
                android:layout_height="52dp"
                android:layout_marginTop="20dp"
                android:hint="Date (DD-MM)"
                android:inputType="text"
                android:drawableLeft="@drawable/baseline_calendar_month_24"
                android:drawablePadding="8dp" />

            <EditText
                android:id="@+id/holidayNameEditText"
                android:layout_width="278dp"
                android:layout_height="52dp"
                android:layout_marginTop="20dp"
                android:hint="Enter Holiday Name"
                android:drawableLeft="@drawable/baseline_celebration_24"
                android:drawablePadding="8dp" />

            <Button
                android:id="@+id/updateButton"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:text="Update"
                android:textSize="16sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>